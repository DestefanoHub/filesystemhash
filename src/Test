import java.util.*;

/**
 * Tests password.java functionality
 *  
 * @author Victoria Johnson				Date: November 24, 2015
 * 
 */
public class Test {

	public static void main(String[] args) throws Exception{
		
		//Variables
		Scanner scan = new Scanner(System.in);
		password pw = new password();
		String newPass = "";
		String test = "";
		
		pw.updatePassword("ThisismynewPassword!");
		
		System.out.println(pw.createHASH());
		
		System.out.println(pw.verify("ThisismynewPassword!"));
		
		//Ask User for password
		System.out.println("Please create a password.");
		newPass = scan.nextLine();
		
		pw.updatePassword(newPass);
		pw.createHASH();
		
		//Ask User for Verification
		System.out.println("Please Enter your password for verifcation");
		test = scan.nextLine();
		
		if(pw.verify(test))
		{
			System.out.println("Correct Password");
		}
		else
		{
			System.out.println("Password Incorrect");
		}
	}
}
